# =============================================================================
# SOCIAL MEDIA AI SYSTEM - BACKEND ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update with your actual values
# Never commit .env files to version control!

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME="Social Media AI System"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=production
API_V1_PREFIX=/api/v1

# CORS Origins (comma-separated list for production)
BACKEND_CORS_ORIGINS=http://localhost:3000,https://localhost:3000,https://your-frontend-domain.com

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HOST=0.0.0.0
PORT=8000

# =============================================================================
# DATABASE CONFIGURATION (Supabase PostgreSQL)
# =============================================================================
# Get these from your Supabase project settings > Database
DATABASE_URL=postgresql://postgres.your-project-ref:your-password@aws-0-region.pooler.supabase.com:5432/postgres
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# Generate a secure secret key (32+ characters)
SECRET_KEY=your-super-secure-secret-key-change-this-in-production-32-chars-minimum
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get these from your Supabase project settings > API
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_KEY=your-supabase-anon-public-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-secret-key

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# For local development
REDIS_URL=redis://localhost:6379/0
# For production (e.g., Redis Cloud, AWS ElastiCache)
# REDIS_URL=redis://username:password@host:port/db

# =============================================================================
# AI SERVICES API KEYS
# =============================================================================
# Google Gemini API Key (get from Google AI Studio)
GEMINI_API_KEY=your-gemini-api-key-from-google-ai-studio

# OpenAI API Key (get from OpenAI platform)
OPENAI_API_KEY=your-openai-api-key-sk-proj-xxxxxxxx

# =============================================================================
# SOCIAL PLATFORM OAUTH CREDENTIALS
# =============================================================================

# Twitter/X API v2 (get from Twitter Developer Portal)
TWITTER_CLIENT_ID=your-twitter-oauth2-client-id
TWITTER_CLIENT_SECRET=your-twitter-oauth2-client-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# LinkedIn API (get from LinkedIn Developer Portal)
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Facebook API (get from Meta for Developers)
FACEBOOK_CLIENT_ID=your-facebook-app-id
FACEBOOK_CLIENT_SECRET=your-facebook-app-secret

# Instagram Basic Display API (uses Facebook App)
INSTAGRAM_CLIENT_ID=your-facebook-app-id
INSTAGRAM_CLIENT_SECRET=your-facebook-app-secret

# TikTok for Developers
TIKTOK_CLIENT_ID=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret

# YouTube Data API v3 (get from Google Cloud Console)
YOUTUBE_CLIENT_ID=your-google-oauth-client-id
YOUTUBE_CLIENT_SECRET=your-google-oauth-client-secret

# =============================================================================
# APPLICATION URLS
# =============================================================================
# Frontend URL for CORS and redirects
FRONTEND_URL=http://localhost:3000
# OAuth callback base URL
CALLBACK_URL=http://localhost:8000/api/v1/oauth

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
# Resend API for transactional emails
RESEND_API_KEY=your-resend-api-key
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME="Social Media AI System"

# =============================================================================
# SECURITY & ENCRYPTION
# =============================================================================
# Encryption key for sensitive data (32+ characters)
ENCRYPTION_KEY=your-32-character-encryption-key-change-this-in-production

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_UPLOAD_SIZE=31457280  # 30MB in bytes
ALLOWED_IMAGE_TYPES=["image/jpeg", "image/png", "image/gif", "image/webp"]
ALLOWED_VIDEO_TYPES=["video/mp4", "video/quicktime", "video/x-msvideo"]

# =============================================================================
# BACKGROUND TASKS (Celery)
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# DEVELOPMENT/TESTING OVERRIDES
# =============================================================================
# Uncomment for local development
# DEBUG=true
# ENVIRONMENT=development
# LOG_LEVEL=DEBUG
